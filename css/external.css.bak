	main {
	margin-top: 0px;
	box-sizing: border-box;
	/* padding-left: 70px; */
	background-color: white;
	margin-left: 00px;
	margin-right: 40px;
	margin-bottom: 40px;
	overflow: hidden;
}
main section {
	width: 100%;
	box-shadow: 5px 5px 10px rgba(0,0,0,0.1);
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	overflow: hidden;
}
main section::after {
	content: '';
	display: inline-flex;
	clear: both;
	overflow: hidden;
}
main ul {
	width: 100%;
	margin-bottom: 40px;

}
main ul::after {
	content: '';
	display: block;
	clear: both;
}
main ul li {
	float: right;
	/* margin-right: 10px; */
	width: 100px;
	height: 26px;
}
main ul li a{
	display: block;
	width: 100%;
	height: 100%;
	font: 13px/20px 'orbitron';
	color: black;
	letter-spacing: 1px;
	text-align: center;
}
main ul li.on a{
	color: #fff;
}
main section article {
	width: 25%;
	box-sizing: border-box;
	margin-bottom: 30px;
	padding: 40px;
	overflow: hidden;
	clear: both;
		/* cursor: pointer; */
}
article:hover {
	width: 25%;
	box-sizing: border-box;
		/* box-shadow: 5px 5px 10px rgba(0,0,0,0.1); */
	padding: 40px;
	transform: scale(1.05);
	/* transform: translateZ(-100px;) */
	overflow: hidden;
	/* cursor: pointer; */
}

main section article div {
	width: 100%;
	/* height: 100%; */
	background: #fff;
	/* border-radius: 4px; */
	/* box-shadow: 5px 5px 10px rgba(0,0,0,0.1); */
  /* border-color: black; */
